{
  "name": "mano-backend",
  "description": "Unified backend services for the Mano AI-powered management assistant",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "supabase functions serve --env-file .env.local",
    "start": "supabase start",
    "stop": "supabase stop",
    "reset": "./scripts/safe-db-reset.sh",
    "reset:unsafe": "supabase db reset",
    "setup": "./scripts/dev-setup.sh",
    "seed:dev": "npx tsx scripts/seed-test-user.ts",
    "test": "cd tests && deno task test",
    "test:unit": "cd tests && deno task test:unit",
    "test:integration": "cd tests && deno task test:integration",
    "test:e2e": "cd tests && deno task test:e2e",
    "test:watch": "cd tests && deno task test:watch",
    "test:coverage": "cd tests && deno task test:coverage",
    "test:core": "npm run test:person && npm run test:chat && npm run test:embeddings && npm run test:delete-account",
    "test:person": "cd tests && deno test --allow-all integration/person.test.ts",
    "test:chat": "cd tests && deno test --allow-all integration/chat.test.ts",
    "test:embeddings": "cd tests && deno test --allow-all integration/create-embeddings.test.ts",
    "test:delete-account": "cd tests && deno test --allow-all integration/delete-account.test.ts",
    "test:action-items": "cd tests && deno test --allow-all integration/action-items-sync.test.ts",
    "deploy": "supabase functions deploy",
    "logs": "supabase functions logs",
    "migration:new": "supabase migration new",
    "migration:up": "supabase migration up",
    "env:local": "./scripts/env-local.sh",
    "env:production": "./scripts/env-production.sh",
    "env:status": "./scripts/env-status.sh",
    "env:stop": "./scripts/env-stop.sh"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.53.0",
    "@supabase/supabase-js": "latest",
    "dotenv": "^16.5.0",
    "node-fetch": "^3.3.2",
    "posthog-node": "^5.5.1",
    "supabase": "^2.24.3"
  },
  "devDependencies": {
    "@types/node": "^20",
    "prettier": "^3.5.3",
    "typescript": "^5"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
